<?xml version="1.0" encoding="iso-8859-1"?>
<persona xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="a1_personaRK.xsd">
    <NIF>12345678A</NIF> <!-- NIF obligatori -->
    <nom>Carla</nom> <!-- Nom obligatori -->
    <cognom1>Ferrer</cognom1> <!-- Cognom1 obligatori -->
    <cognom2>Anamika</cognom2> <!-- Cognom2 no obligatori -->
</persona>

